<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:toolbar="http://schemas.android.com/apk/res-auto"
                tools:context="cn.edu.zju.mypay.Activity.NFCReceiveActivity">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    toolbar:title="NFC收款"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    toolbar:titleTextColor="@android:color/white"
    android:background="@color/theme_color_primary" />
<RelativeLayout
    android:id="@+id/rl_bottom"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    >

</RelativeLayout>

    <ImageView
        android:id="@+id/qr_code_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/nfc_read"/>

    <!--<TextView-->
        <!--android:id="@+id/textView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_below="@+id/qr_code_img"-->
        <!--android:layout_marginTop="33dp"-->
        <!--android:text="请把您的手机靠近顾客的手机，等待顾客操作。"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="18sp"/>-->

    <TableLayout
        android:id="@+id/table"
        android:layout_below="@id/qr_code_img"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:gravity="center|center_horizontal|center_vertical"
        android:layout_height="fill_parent">

        <TableRow
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/totalMoney"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textSize="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textColor="@color/black"
                android:text="请把您的手机靠近顾客的手机，然后等待用户操作"/>

        </TableRow>

        <TableRow
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp">
            <TextView
                android:id="@+id/userId"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textSize="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textColor="@color/black"
                android:text=""/>

        </TableRow>
        <TableRow
            android:gravity="center|center_horizontal|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/orderList"
                android:gravity="center_vertical|left"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:textSize="@dimen/activity_horizontal_margin"
                android:background="@color/white"
                android:textColor="@color/black"
                android:text=""/>

        </TableRow>
    </TableLayout>
</RelativeLayout>
